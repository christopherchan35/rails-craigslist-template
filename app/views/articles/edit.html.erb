<%= form_for :article, url: article_path(@article), method: :put do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />

  <%= f.label :body %>
  <%= f.text_field :body %><br />

  <%= f.label :email %>
  <%= f.text_field :email %><br />

  <%= f.label :price %>
  <%= f.text_field :price %><br />
  <%= f.submit %>
<% end %>
